{
  "compilerOptions": {
    "strict": true,
    "outDir": "./build",
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "target": "es2017",
    "types": [
      "node"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*",
    "./spec/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
